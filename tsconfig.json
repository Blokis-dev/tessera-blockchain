{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "files": ["./hardhat.config.ts"],
  "include": [
    "scripts/**/*",
    "test/**/*",
    "deploy/**/*",
    "api/**/*",
    "types/**/*",
    "typechain-types/**/*"
  ]
}
